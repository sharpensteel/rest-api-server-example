    "test": "jest --testPathPattern=.*/src/.*.test.ts",
    "coverage": "jest --testPathPattern=.*/src/.*.test.ts --coverage=true",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create --config ormconfig.js -n",
    "migration:generate": "NODE_ENV=development ts-node ./node_modules/typeorm/cli.js migration:generate --config ormconfig.js -n",
    "migration:run": "NODE_ENV=development ts-node ./node_modules/typeorm/cli.js migration:run --config ormconfig.js",
    "migration:run:unittest": "NODE_ENV=development ts-node ./node_modules/typeorm/cli.js migration:run --config ormconfig.unittest.js",
    "migration:revert": "NODE_ENV=development ts-node ./node_modules/typeorm/cli.js migration:revert --config ormconfig.js"
  },
